files:
    '/etc/nginx/conf.d/01-nginx.custom.conf':
        mode: '000755'
        owner: 'root'
        group: 'root'
        content: |
            client_header_timeout   3600;
            client_body_timeout     3600;
            send_timeout            3600;
            proxy_connect_timeout   3600;
            proxy_read_timeout      3600;
            proxy_send_timeout      3600;

container_commands:
    01_restart_nginx:
        command: 'sudo service nginx reload'
