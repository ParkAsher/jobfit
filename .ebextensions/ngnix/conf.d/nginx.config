files:
    '/etc/nginx/conf.d/nginx.custom.conf':
        mode: '644'
        owner: 'root'
        group: 'root'
        content: |
            client_header_timeout   4000;
            client_body_timeout     4000;
            send_timeout            4000;
            proxy_connect_timeout   4000;
            proxy_read_timeout      4000;
            proxy_send_timeout      4000;

container_commands:
    01_restart_nginx:
        command: 'sudo service nginx reload'

include conf.d/elasticbeanstalk/*.conf;