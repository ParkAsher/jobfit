            success: function (response) {
                showCarouselJobposts('carouselEnding', response.data, response.likedUser)
            }
        })
    })

    function showCarouselJobposts(carouselId, response, likedUser) {
        for (let i = 0; i < 12; i++) {
            const tempHtml = createJobpostCard(response[i], likedUser)

            const carouselNum = Math.floor(i / 4) + 1
            $(`#${carouselId}${carouselNum}`).append(tempHtml)
        }
    }
